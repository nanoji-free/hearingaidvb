<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/topOfPageBlanker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="開始"
        app:layout_constraintTop_toBottomOf="@+id/topOfPageBlanker"
        />

    <TextView
        android:id="@+id/tvVolumeValue"
        android:layout_width="160dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:text="音量調整"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginStart="16dp"
        />

    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        android:thumb="@drawable/custom_thumb"
        android:max="100"
        app:layout_constraintTop_toBottomOf="@+id/tvVolumeValue"
        />
    <Button
        android:id="@+id/presetButtonMA"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:text="全体を初期設定に戻す"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton"
        />
    <ImageView
        android:id="@+id/up_msg_bord"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:scaleType="fitXY"
        android:src="@drawable/up_msg_bord"
        app:layout_constraintTop_toBottomOf="@+id/volumeSeekBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="動作停止中"
        android:textColor="#e95464"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volumeSeekBar" />


    <ImageView
        android:id="@+id/centerImage"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="18dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@+id/statusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/toInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="各種のお知らせ など"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toBottomOf="@+id/up_msg_bord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
