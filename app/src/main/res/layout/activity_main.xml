    <TextView
        android:id="@+id/textOfNoiseFilter"
        android:text="ノイズ除去（搭載スマホのみ対応）"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/emphasisSwitch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginStart="16dp"
        android:layout_margin="8dp"
        />
    <Switch
        android:id="@+id/noiseFilterSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/emphasisSwitch"
        android:layout_margin="8dp"
        />

     <TextView
        android:text="ノイズ低減＆音声クリア"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginStart="16dp"
        android:layout_margin="8dp"
        />
    <Switch
        android:id="@+id/emphasisSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button_settings"
        android:layout_margin="8dp"
        />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="詳細設定へ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        />

    <Button
        android:id="@+id/button_easysettings"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="かんたん設定へ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

