<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".DisplaySettingsActivity">
    <TextView
        android:id="@+id/aboutDiplaySettingsPage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text=" 【 画面の設定 】"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/chrChangeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="中央の画像を選択"
        android:layout_marginTop="18dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/aboutDiplaySettingsPage"
        app:layout_constraintStart_toStartOf="parent"
        />
    <RadioGroup
        android:id="@+id/centerSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/chrChangeTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="24dp">

        <RadioButton
            android:id="@+id/chrNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="なし" />

        <RadioButton
            android:id="@+id/chrRecommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="オススメ" />

        <RadioButton
            android:id="@+id/chrChoiced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="あなたの選択した画像" />
    </RadioGroup>

    <Button
        android:id="@+id/centerPictSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="画像を選択する"
        app:layout_constraintTop_toBottomOf="@+id/centerSelector"
        />
    <ImageView
        android:id="@+id/centerImageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="false"
        android:cropToPadding="true"
        app:layout_constraintTop_toBottomOf="@id/centerPictSelect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/buckChangeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="背景の選択"
        android:layout_marginTop="178dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/centerPictSelect"
        app:layout_constraintStart_toStartOf="parent"
        />
    <RadioGroup
        android:id="@+id/backgroundSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/buckChangeTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="24dp">

        <RadioButton
            android:id="@+id/bgNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="なし" />

        <RadioButton
            android:id="@+id/bgDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="初期設定" />

        <RadioButton
            android:id="@+id/bgRecommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="オススメ" />
    </RadioGroup>



    <Button
        android:id="@+id/returnToEasyButton"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="戻る"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
