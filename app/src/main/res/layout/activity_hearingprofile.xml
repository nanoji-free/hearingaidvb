<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/aboutThisPage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=" 【 聞こえ方の設定 】"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/sliderGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/aboutThisPage"
        app:layout_constraintBottom_toTopOf="@id/toFittingButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 250Hz -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/label_250"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250Hz"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/slider_250"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:max="30"
                android:rotation="270"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/value_250"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0dB"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 500Hz -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        <TextView
            android:id="@+id/label_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500Hz"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/slider_500"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:max="30"
            android:rotation="270"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/value_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0dB"
            android:textSize="12sp" />
        </LinearLayout>

        <!-- 1000Hz -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/label_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000Hz"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/slider_1000"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:max="30"
                android:rotation="270"
                android:layout_marginBottom="4dp" />
            <TextView
                android:id="@+id/value_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0dB"
                android:textSize="12sp" />
        </LinearLayout>
        <!-- 2000Hz -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/label_2000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000Hz"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/slider_2000"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:max="30"
                android:rotation="270"
                android:layout_marginBottom="4dp" />
            <TextView
                android:id="@+id/value_2000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0dB"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/label_4000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4000Hz"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/slider_4000"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:max="30"
                android:rotation="270"
                android:layout_marginBottom="4dp" />
            <TextView
                android:id="@+id/value_4000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0dB"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>



    <Button
        android:id="@+id/toFittingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="フィッテングを行う"
        app:layout_constraintBottom_toTopOf="@id/hearingReturnButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/hearingReturnButton"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="戻る"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>